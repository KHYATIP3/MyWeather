<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.khyatipatel1995gmail.myweather.MainActivity">

    <Button
        android:id="@+id/show_city_list_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />
    <TextView
        android:id="@+id/show_city_name_textview"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/add_location_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/menu_button"
        android:layout_toStartOf="@+id/menu_button" />
    <Button
        android:id="@+id/menu_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/add_location_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/presentdate_textview"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_below="@+id/show_city_name_textview"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/current_weather_textview"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_below="@+id/presentdate_textview"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/current_temperature_textview"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/current_weather_textview"
        android:layout_alignStart="@+id/current_weather_textview"
        android:layout_below="@+id/current_weather_textview"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/maxtemp_textview"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/current_weather_textview"
        android:layout_toLeftOf="@+id/add_location_button"
        android:layout_toStartOf="@+id/add_location_button" />
    <TextView
        android:id="@+id/mintemp_textview"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/maxtemp_textview"
        android:layout_toLeftOf="@+id/add_location_button"
        android:layout_toStartOf="@+id/add_location_button"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/feels_like_textview"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@+id/current_temperature_textview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/sunrise_textview"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_below="@+id/feels_like_textview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>